{
  "kind": "collectionType",
  "collectionName": "testimonials",
  "info": {
    "singularName": "testimonial",
    "pluralName": "testimonials",
    "displayName": "Testimonial"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "username": {
      "type": "string",
      "maxLength": 255,
      "required": true
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "date": {
      "type": "date",
      "required": true
    },
    "review": {
      "type": "text",
      "required": false
    },
    "rating": {
      "type": "integer",
      "required": true,
      "min": 0,
      "max": 5
    }
  }
}
